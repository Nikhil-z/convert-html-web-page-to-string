<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<com.balysv.materialripple.MaterialRippleLayout
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.leonardoxh.customfont.FontText
            android:id="@+id/library_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/my_text"
            android:textSize="@dimen/textSizeHuge"
            app:font="gridnik" />

        <com.github.leonardoxh.customfont.FontText
            android:id="@+id/library_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/my_text_light"
            android:textSize="@dimen/textSizeSmall"
            app:font="bitterregular" />

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>